{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "basekeez",
  "version": "0.1.0",
  "identifier": "com.basekeez.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "basekeez",
        "label": "main",
        "width": 800,
        "height": 600,
        "focus": true,
        "url": "index.html"
      },
      {
        "title": "scoreBoard",
        "label": "child",
        "url": "index.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
